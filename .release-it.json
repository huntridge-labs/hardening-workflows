{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "git": {
    "commitMessage": "chore(release): v${version}",
    "tagName": "${version}",
    "requireCleanWorkingDir": false,
    "requireUpstream": true,
    "addUntrackedFiles": false
  },
  "github": {
    "release": true,
    "releaseName": "Release ${version}",
    "releaseNotes": null,
    "autoGenerate": false,
    "draft": false,
    "preRelease": false,
    "assets": []
  },
  "npm": {
    "publish": false,
    "ignoreVersion": false
  },
  "hooks": {
    "before:init": [
      "npm test"
    ],
    "after:bump": "echo 'Version bumped to ${version}'",
    "after:git:release": "echo 'Git tag ${tagName} created'",
    "after:github:release": "echo 'GitHub release ${version} published'",
    "after:release": "echo 'Release ${version} completed successfully!'"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          },
          {
            "type": "docs",
            "section": "Documentation"
          },
          {
            "type": "style",
            "section": "Styles"
          },
          {
            "type": "refactor",
            "section": "Code Refactoring"
          },
          {
            "type": "perf",
            "section": "Performance Improvements"
          },
          {
            "type": "test",
            "section": "Tests"
          },
          {
            "type": "build",
            "section": "Build System"
          },
          {
            "type": "ci",
            "section": "Continuous Integration"
          }
        ]
      },
      "infile": "CHANGELOG.md",
      "header": "# Changelog\n\nAll notable changes to this project will be documented in this file.\n\nThe format is based on [Keep a Changelog](https://keepachangelog.com/en/1.0.0/),\nand this project adheres to [Semantic Versioning](https://semver.org/spec/v2.0.0.html).\n\n",
      "ignoreRecommendedBump": false,
      "strictSemVer": true
    },
    "@j-ulrich/release-it-regex-bumper": {
      "in": "version.yaml",
      "out": [
        "version.yaml",
        {
          "file": "docs/reusing-workflows.md",
          "search": {
            "pattern": "reusable-security-hardening.yml@\\d+\\.\\d+\\.\\d+",
            "flags": "g"
          },
          "replace": "reusable-security-hardening.yml@{{version}}"
        }
      ]
    }
  }
}
